<div class="row">
  <div class="col-lg-8">
    <div class="content-column-content">
      <h1><%= @gallery.title %></h1>
      <div id="main-slider">
        <% if @gallery.attachments.present? %>
          <% @gallery.attachments.each do |attachment| %>
          <div class="item">
            <%= image_tag attachment.attachment.url, class: "img-responsive" %>
          </div>
          <% end %>
          <% else %>
          <div class="item">
            <%= image_tag @gallery.image.medium, class: "img-responsive" %>
          </div>
        <% end %>
      </div>
      <%= sanitize(@gallery.detail_description) %>
    </div>
  </div>
</div>
