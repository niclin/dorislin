<div class="row">
  <div class="col-lg-8">
    <div class="content-column-content">
      <h1><%= @gallery.title %></h1>
      <p class="lead"><%= @gallery.description %></p>
      <div id="main-slider">
        <div class="item">
          <%= image_tag @gallery.image.medium, class: "img-responsive" %>
        </div>
        <% @gallery.attachments.each do |attachment| %>
        <div class="item">
          <%= image_tag attachment.attachment.url, class: "img-responsive" %>
        </div>
        <% end %>
      </div>
      <p><%= sanitize(@gallery.detail_description) %></p>
    </div>
  </div>
</div>

<% content_for :javascripts do %>
  <meta property="og:image" content="<%= page_image %>"/>
<% end %>
